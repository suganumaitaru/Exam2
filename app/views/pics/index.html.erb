<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

<p><%= notice %></p>

<h1>ブログ一覧</h1>

<% @pics.each do |pic| %>
  <div class="row">

  <p>タイトル:<%= pic.title %></p>
  <p>本文:<%= pic.content %></p>
  <%= link_to "ブログを編集する", edit_pic_path(pic.id) %>
  <%= link_to 'ブログを削除する', pic_path(pic.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  </div>
<% end %>

<%= link_to "ブログを作成する", new_pic_path %>
  </div>
</div>